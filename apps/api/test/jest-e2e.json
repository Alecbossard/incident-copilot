{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../..",
  "testMatch": ["<rootDir>/api/test/e2e/**/*.spec.ts"],
  "transform": {
    "^.+\\.(t|j)s$": [
      "ts-jest",
      { "tsconfig": "<rootDir>/api/tsconfig.spec.json" }
    ]
  },
  "testEnvironment": "node",
  "verbose": true
}
